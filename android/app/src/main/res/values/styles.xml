        <!--<item name="android:layout_width">fill_parent</item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
        <!--<item name="android:background">@drawable/clickable_background_gray</item>-->
        <!--<item name="android:padding">4dp</item>-->
    <!--</style>-->

    <style name="ItemOuterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/item_background</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="ItemInnerLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/list_item_bg_color</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="ItemOuterLayoutGreyBorder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/item_pressed_background</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="UserHomeItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/list_item_bg_color</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="UserHomeItemImageStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="UserHomeItemTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="table_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/general_background</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="GeneralSize">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">top</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:lines">2</item>
    </style>


    <style name="fcSelectableItemBackground">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="fcBorderlessButtonBackground" parent="@android:style/Widget.Button"></style>

    <style name="fcButtonDividerVerticalBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="fcButtonDividerHorizontalBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>