<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    style="@style/ItemOuterLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ItemInnerLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/announcement_item_name"
            android:singleLine="true"
            android:textColor="@color/text_black"
            style="@style/ItemName"
            android:textSize="18sp"
            android:maxWidth="250dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/announcement_item_lastupdate"
            android:singleLine="true"
            style="@style/ItemComment"
            android:textSize="12sp"
            android:layout_below="@+id/announcement_item_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:maxWidth="160dp"/>

        <ImageView
            android:layout_above="@+id/announcement_item_lastupdate"
            android:src="@drawable/right_arrow"
            style="@style/ItemGotoIcon"
            android:layout_height="30dp"
            />
    </RelativeLayout>
</RelativeLayout>