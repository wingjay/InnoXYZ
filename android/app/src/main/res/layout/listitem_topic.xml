<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/ItemOuterLayout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/ItemInnerLayout">

        <TextView
            android:text="New Text"
            android:id="@+id/topic_item_name"
            style="@style/ItemName"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:padding="2dp"
            android:maxWidth="250dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            style="@style/ItemGotoIcon"
            android:src="@drawable/right_arrow"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/topic_item_lastreply"
            android:singleLine="true"
            android:layout_alignLeft="@+id/topic_item_name"
            android:layout_alignStart="@+id/topic_item_name"
            android:padding="2dp"
            android:layout_below="@+id/topic_item_name"
            />
    </RelativeLayout>
</RelativeLayout>